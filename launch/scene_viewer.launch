<?xml version="1.0"?>
<launch>
  <arg name="output" default="screen"/>
  <arg name="respawn" default="false"/>
  <arg name="start_manager" default="true"/>
  <arg name="start_server" default="false"/>
  <arg name="nodelet_manager" default="scene_viewer_nodelet_manager"/>
  <arg name="launch-prefix" default=""/>

  <arg name="publish_on_changes" default="false"/>
  <arg name="global_frame_id" default="map"/>
  <arg name="default_input_worlds" default="env"/>

  <node name="$(arg nodelet_manager)"
        pkg="nodelet" type="nodelet"
        args="manager"
        respawn="$(arg respawn)"
        output="$(arg output)"
        launch-prefix="$(arg launch-prefix)"
        if="$(arg start_manager)"/>

  <node name="uwds_server"
        pkg="nodelet" type="nodelet"
        args="load uwds/UwdsServerNodelet $(arg nodelet_manager)"
        respawn="$(arg respawn)"
        output="$(arg output)"
        launch-prefix="$(arg launch-prefix)"
        if="$(arg start_server)"/>

  <node name="scene_viewer"
        pkg="nodelet" type="nodelet"
        args="load uwds_basic_clients/SceneViewer $(arg nodelet_manager)"
        output="$(arg output)"
        launch-prefix="$(arg launch-prefix)">
    <rosparam subst_value="true">
      global_frame_id: $(arg global_frame_id)
      publish_on_changes: $(arg publish_on_changes)
      default_inputs: $(arg default_input_worlds)
    </rosparam>
  </node>

</launch>
